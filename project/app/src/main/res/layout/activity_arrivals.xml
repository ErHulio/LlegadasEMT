<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.ArrivalsActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/arrivals_toolbar"
            style="@style/ArrivalsToolbarTheme" tools:ignore="MissingConstraints"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/arrivals_list"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/arrivals_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/bus_arrival"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/empty_arrive"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="4dp"
            app:layout_constraintHeight_percent="0.11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/arrivals_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.01"
            tools:targetApi="lollipop">
        <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/text_bg_rounded"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintWidth_percent="0.29"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.05"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.5"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/text_bg_rounded"
                app:layout_constraintHeight_percent="0.38"
                app:layout_constraintWidth_percent="0.552"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.84"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.15"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/text_bg_rounded"
                app:layout_constraintHeight_percent="0.38"
                app:layout_constraintWidth_percent="0.243"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.85"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/text_bg_rounded"
                app:layout_constraintHeight_percent="0.38"
                app:layout_constraintWidth_percent="0.243"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.905"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.85"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:id="@+id/wrong_stop"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:elevation="10dp"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arrivals_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:targetApi="lollipop"
            tools:ignore="UseCompoundDrawables">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="@string/wrong_stop_image_description"/>
        <TextView
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:text="@string/wrong_stop_text"
                android:textColor="#80000000"
                android:textSize="30sp"
                android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/no_arrivals"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:elevation="10dp"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arrivals_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:targetApi="lollipop"
            tools:ignore="UseCompoundDrawables">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@android:drawable/ic_menu_recent_history"
                android:contentDescription="@string/no_arrivals_image_description"/>
        <TextView
                android:layout_height="100dp"
                android:layout_width="match_parent"
                android:text="@string/no_arrivals_text"
                android:textColor="#80000000"
                android:textSize="30sp"
                android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/timeout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:elevation="10dp"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arrivals_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:targetApi="lollipop"
            tools:ignore="UseCompoundDrawables">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@android:drawable/stat_notify_error"
                android:tint="#4D000000"
                android:contentDescription="@string/timeout_description"/>
        <TextView
                android:layout_height="100dp"
                android:layout_width="match_parent"
                android:text="@string/timeout"
                android:textColor="#80000000"
                android:textSize="30sp"
                android:gravity="center"/>
        <TextView
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:text="@string/timeout_2"
                android:textColor="#80000000"
                android:textSize="30sp"
                android:gravity="center"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/floating_refresh"
            android:visibility="gone"
            android:theme="@style/Theme.MaterialComponents"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="50dp"
            android:contentDescription="@string/refresh_description"
            app:icon="@drawable/ic_refresh"
            app:iconSize="36dp"
            app:iconTint="#99000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeFloatingButton"
             />
</androidx.constraintlayout.widget.ConstraintLayout>