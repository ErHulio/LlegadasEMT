<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.ArrivalsActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/arrivals_toolbar"
            style="@style/ArrivalsToolbarTheme" tools:ignore="MissingConstraints"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/arrivals_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="6dp"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/arrivals_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/bus_arrival"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/empty_arrive"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/arrivals_toolbar"
            android:layout_marginTop="6dp">
        <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@drawable/text_bg_rounded"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="36dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="227dp"
                android:layout_height="30dp"
                android:background="@drawable/text_bg_rounded"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.9" app:layout_constraintTop_toTopOf="parent"
        />
        <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/text_bg_rounded"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/text_bg_rounded"
                android:gravity="center"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.945" app:layout_constraintBottom_toBottomOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>